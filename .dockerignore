# =============================================================================
# DOCKER IGNORE - Minimize build context for faster builds
# =============================================================================

# Version control
/.git/
/.gitignore
/.gitattributes

# Bundler
/.bundle

# Environment and secrets (NEVER include in image)
/.env*
/config/master.key
/config/credentials/*.key

# Logs and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# PID files
/tmp/pids/*
!/tmp/pids/.keep

# Storage (user uploads, SQLite)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Assets (rebuilt during docker build)
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# CI/CD
/.github
/.gitlab-ci.yml
/.circleci

# Deployment configs (not needed in image)
/config/deploy*.yml
/.kamal

# Development
/.devcontainer
/.vscode
/.idea
/.ruby-lsp

# Docker files (prevent recursive context)
/.dockerignore
/Dockerfile*
/docker-compose*.yml

# Testing (excluded from production)
/test/
/spec/
/coverage/
/.rspec

# Documentation
/README*
/CHANGELOG*
/LICENSE*
/docs/
/*.md

# Misc
*.swp
*.swo
*~
.DS_Store
Thumbs.db
