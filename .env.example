# Production Environment Variables Example
# Copy this file to .env.production and update with your actual production values

# Rails Secret Key (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Production Database Configuration
# Option 1: Use individual database environment variables
DATABASE_HOST=your_production_host
DATABASE_PORT=5432
DATABASE_USERNAME=your_production_user
DATABASE_PASSWORD=your_production_password
DATABASE_NAME=inventory_production

# Option 2: Use DATABASE_URL (this takes precedence over individual vars)
# DATABASE_URL=postgresql://user:password@host:port/database_name

# Rails Configuration
RAILS_MAX_THREADS=5
RAILS_ENV=production