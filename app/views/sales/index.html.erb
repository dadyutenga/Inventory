<div class="container">
  <div class="header-section">
    <h1>Sales History</h1>
    <%= link_to "Record New Sale", new_sale_path, class: "btn" %>
  </div>

  <% if @sales.any? %>
    <table class="sales-table">
      <thead>
        <tr>
          <th>Invoice Ref</th>
          <th>Product</th>
          <th>Sold To</th>
          <th>Sold By</th>
          <th>Sale Date</th>
          <th>Sale Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @sales.each do |sale| %>
          <tr>
            <td><%= sale.invoice_ref || "N/A" %></td>
            <td><%= link_to sale.product.display_name, product_path(sale.product) %></td>
            <td><%= sale.sold_to %></td>
            <td><%= sale.sold_by.name || sale.sold_by.email %></td>
            <td><%= sale.sold_at.strftime("%B %d, %Y") %></td>
            <td class="price"><%= format_currency(sale.sale_price) %></td>
            <td>
              <%= link_to "View", sale_path(sale), class: "btn btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="no-results">
      <p>No sales recorded yet. <%= link_to "Record your first sale", new_sale_path %></p>
    </div>
  <% end %>
</div>

<style>
.container { max-width: 1200px; margin: 0 auto; padding: 20px; }
.header-section { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
.sales-table { width: 100%; border-collapse: collapse; background: var(--card); border: 1px solid var(--border); box-shadow: 0 3px 10px rgba(15,23,42,0.06); }
.sales-table thead { background: rgba(45,138,117,0.10); color: var(--text); }
.sales-table th, .sales-table td { padding: 12px; text-align: left; border-bottom: 1px solid var(--border); font-size: 13px; }
.sales-table tbody tr:hover { background: #f6f7f8; }
.sales-table a { color: var(--accent); text-decoration: none; }
.sales-table a:hover { text-decoration: underline; }
.price { font-weight: 700; color: var(--text); }
.no-results { text-align: center; padding: 32px; background: var(--card); border: 1px solid var(--border); border-radius: 10px; }
</style>
