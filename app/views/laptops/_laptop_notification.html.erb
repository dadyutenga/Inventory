<div class="laptop-notification">
  <p>
    <strong>New laptop added:</strong> 
    <%= link_to laptop.display_name, laptop_path(laptop) %>
  </p>
</div>

<style>
.laptop-notification {
  background: #d4edda;
  border: 1px solid #c3e6cb;
  color: #155724;
  padding: 10px 15px;
  border-radius: 4px;
  margin-bottom: 10px;
  animation: slideIn 0.3s ease-out;
}

.laptop-notification a {
  color: #155724;
  font-weight: bold;
  text-decoration: underline;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>
