<div class="page-header">
  <h1>Edit Laptop: <%= @laptop.display_name %></h1>
  <div class="header-actions">
    <%= link_to "View", laptop_path(@laptop), class: "btn btn-info" %>
    <%= link_to "Back to List", laptops_path, class: "btn btn-secondary" %>
  </div>
</div>

<%= render "form", laptop: @laptop %>

<style>
.page-header { display: flex; justify-content: space-between; align-items: center; max-width: 1200px; margin: 0 auto; padding: 20px; }
.header-actions { display: flex; gap: 10px; }
.btn { padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; text-decoration: none; display: inline-block; font-size: 14px; }
.btn-info { background: #17a2b8; color: white; }
.btn-secondary { background: #6c757d; color: white; }
