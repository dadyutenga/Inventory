<div class="container mx-auto py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Users Management</h1>
    <%= link_to "Create New User", new_user_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded overflow-hidden">
    <table class="w-full border-collapse">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Name</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Role</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Created</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="border-t hover:bg-gray-50">
            <td class="px-6 py-4 text-sm text-gray-900"><%= user.name %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= user.email %></td>
            <td class="px-6 py-4 text-sm">
              <span class="<%= user.admin? ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800' %> px-3 py-1 rounded">
                <%= user.role.capitalize %>
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600"><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-4 text-sm space-x-2">
              <%= link_to "Edit", edit_user_path(user), class: "text-blue-500 hover:text-blue-700" %>
              <% if user != current_user %>
                <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @users.empty? %>
    <div class="text-center mt-8 text-gray-600">
      <p>No users found. <%= link_to "Create one now", new_user_path, class: "text-blue-500 hover:text-blue-700" %></p>
    </div>
  <% end %>
</div>
