<div class="container mx-auto max-w-md mt-10">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold mb-6">Edit User</h2>
    
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this user:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, required: true,
            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, required: true,
            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div>
        <%= f.label :password, "Password (leave blank to keep current)", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, minlength: 6,
            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <p class="text-xs text-gray-500 mt-1">Minimum 6 characters (optional)</p>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, minlength: 6,
            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div>
        <%= f.label :role, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.select :role, [["Employee", "employee"], ["Admin", "admin"]], { selected: @user.role },
            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between mt-6">
        <%= f.submit "Update User", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Back to Users", users_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
