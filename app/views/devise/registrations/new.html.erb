<div class="login-container">
  <div class="login-box">
    <div class="login-header">
      <h1>üñ•Ô∏è Ditronics Inventory</h1>
      <h2>Create Account</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Full Name" %>
        <%= f.text_field :name, autofocus: true, class: "form-input", placeholder: "John Doe" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input", placeholder: "your@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "Enter password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "Re-enter password" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign Up", class: "btn-login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center; margin: 0; }
  .login-container { width: 100%; max-width: 450px; padding: 20px; }
  .login-box { background: white; border-radius: 12px; box-shadow: 0 10px 40px rgba(0,0,0,0.2); padding: 40px; }
  .login-header { text-align: center; margin-bottom: 30px; }
  .login-header h1 { font-size: 32px; margin: 0 0 10px 0; color: #333; }
  .login-header h2 { font-size: 24px; margin: 0; color: #666; font-weight: 400; }
  .login-form { margin-top: 30px; }
  .form-group { margin-bottom: 20px; }
  .form-group label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; font-size: 14px; }
  .form-group small { color: #999; font-size: 12px; }
  .form-input { width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 6px; font-size: 15px; transition: border-color 0.3s; }
  .form-input:focus { outline: none; border-color: #667eea; }
  .form-actions { margin-top: 25px; }
  .btn-login { width: 100%; padding: 14px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 6px; font-size: 16px; font-weight: 600; cursor: pointer; transition: transform 0.2s; }
  .btn-login:hover { transform: translateY(-2px); box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4); }
  a { color: #667eea; text-decoration: none; }
  a:hover { text-decoration: underline; }
</style>
